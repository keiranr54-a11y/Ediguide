# University Ranking Website ðŸŽ“

This is a simple university ranking website built using HTML, CSS, and JavaScript.

## Features
- Displays a university ranking table
- Data loaded from a JSON file
- Clean and simple layout

## Future Plans
- Add search and filters
- Add multiple ranking categories
- Connect to a backend or database

## How to Run
Just open `index.html` in your browser.
/* main.js
   Handles:
   - fetching ranking data
   - rendering table
   - search, filters, sorting
   - storing local notes (localStorage)
   - placeholder rating UI (stored local)
*/

/* ---------- Utility helpers ---------- */
const $ = (sel) => document.querySelector(sel);
const $$ = (sel) => Array.from(document.querySelectorAll(sel));

/* ---------- App state ---------- */
const state = {
  data: [],
  filtered: [],
  sort: 'rank-asc'
};

/* ---------- Elements ---------- */
const tableBody = $('#ranking-table tbody');
const searchInput = $('#search-input');
const countryFilter = $('#country-filter');
const rankMin = $('#rank-min');
const rankMax = $('#rank-max');
const sortSelect = $('#sort-select');
const resetBtn = $('#reset-btn');
const resultCount = $('#result-count');
const activeFilters = $('#active-filters');

const NOTES_KEY = 'ediguide_notes_v1';
const RATINGS_KEY = 'ediguide_ratings_v1';

/* ---------- Load data ---------- */
/* This site uses a local JSON file. Add more data as needed. */
async function loadData() {
  try {
    const res = await fetch('data/rankings.json');
    const data = await res.json();
    state.data = data;
    state.filtered = data.slice();
    initFilters();
    applySortAndRender();
  } catch (err) {
    console.error('Failed to load rankings:', err);
    resultCount.textContent = 'Failed to load data';
  }
}

/* ---------- Filters init ---------- */
function initFilters() {
  const countries = Array.from(new Set(state.data.map(d => d.country))).sort();
  countries.forEach(c => {
    const opt = document.createElement('option');
    opt.value = c;
    opt.textContent = c;
    countryFilter.appendChild(opt);
  });
}

/* ---------- Rendering ---------- */
function renderTable(list) {
  tableBody.innerHTML = '';
  if (!list.length) {
    const tr = document.createElement('tr');
    tr.innerHTML = `<td colspan="6">No results</td>`;
    tableBody.appendChild(tr);
    resultCount.textContent = '0 results';
    return;
  }

  resultCount.textContent = `${list.length} result${list.length>1?'s':''}`;

  list.forEach(item => {
    const tr = document.createElement('tr');

    // Create rating display: localStorage-backed
    const ratings = JSON.parse(localStorage.getItem(RATINGS_KEY) || '{}');
    const avgRating = ratings[item.university]?.avg ?? null;

    tr.innerHTML = `
      <td>${item.rank}</td>
      <td class="univ-cell">${escapeHtml(item.university)}</td>
      <td>${escapeHtml(item.country)}</td>
      <td>${item.score}</td>
      <td class="ad-cell"><div class="ad-placeholder small">Ad slot</div></td>
      <td class="rating-cell" data-univ="${escapeHtml(item.university)}">
        ${renderStars(avgRating)}
      </td>
    `;

    tableBody.appendChild(tr);
  });

  // wire up rating click handlers (stars)
  $$('.rating-cell .star').forEach(star => {
    star.addEventListener('click', (e) => {
      const cell = e.target.closest('.rating-cell');
      const univ = cell.dataset.univ;
      const value = Number(e.target.dataset.value);
      saveRating(univ, value);
      applySortAndRender(); // re-render to update average
    });
  });

  updateActiveFiltersDisplay();
}

/* ---------- Escape helper ---------- */
function escapeHtml(str) {
  return String(str).replace(/[&<>"']/g, s => ({
    '&':'&amp;','<':'&lt;','>':'&gt;','"':'&quot;',"'":'&#39;'
  }[s]));
}

/* ---------- Stars UI ---------- */
function renderStars(avg) {
  // if no rating, show 0 highlighted
  let html = '';
  for (let i=1;i<=5;i++) {
    const cls = (avg && avg >= i - 0.5) ? 'star active' : 'star';
    html += `<span class="${cls}" data-value="${i}" role="button" aria-label="Rate ${i}">${'â˜…'}</span>`;
  }
  if (avg) html += `<div class="rating-note">(${avg.toFixed(1)})</div>`;
  return html;
}

/* ---------- Rating storage (local) ---------- */
function saveRating(university, value) {
  const all = JSON.parse(localStorage.getItem(RATINGS_KEY) || '{}');
  if (!all[university]) all[university] = { sum: 0, count: 0, avg: 0 };
  all[university].sum += value;
  all[university].count += 1;
  all[university].avg = all[university].sum / all[university].count;
  localStorage.setItem(RATINGS_KEY, JSON.stringify(all));
  alert(`Thanks! Recorded ${value}â˜… for ${university} (stored locally).`);
}

/* ---------- Filtering & Sorting logic ---------- */
function applyFilters() {
  const q = (searchInput.value || '').trim().toLowerCase();
  const country = countryFilter.value;
  const min = Number(rankMin.value) || null;
  const max = Number(rankMax.value) || null;

  state.filtered = state.data.filter(item => {
    if (q) {
      const inName = item.university.toLowerCase().includes(q);
      if (!inName) return false;
    }
    if (country && item.country !== country) return false;
    if (min && item.rank < min) return false;
    if (max && item.rank > max) return false;
    return true;
  });
}

function applySortAndRender() {
  applyFilters();

  // Sorting
  const s = sortSelect.value;
  state.filtered.sort((a,b) => {
    switch(s) {
      case 'rank-asc': return a.rank - b.rank;
      case 'rank-desc': return b.rank - a.rank;
      case 'score-desc': return b.score - a.score;
      case 'score-asc': return a.score - b.score;
      case 'name-asc': return a.university.localeCompare(b.university);
      case 'name-desc': return b.university.localeCompare(a.university);
      case 'country-asc': return a.country.localeCompare(b.country);
      default: return a.rank - b.rank;
    }
  });

  renderTable(state.filtered);
}

/* ---------- Active filters display ---------- */
function updateActiveFiltersDisplay() {
  const parts = [];
  if (searchInput.value) parts.push(`Query: "${searchInput.value}"`);
  if (countryFilter.value) parts.push(`Country: ${countryFilter.value}`);
  if (rankMin.value || rankMax.value) {
    parts.push(`Rank: ${rankMin.value || '1'}â€“${rankMax.value || 'âˆž'}`);
  }
  activeFilters.innerHTML = parts.length ? parts.map(p => `<li>${p}</li>`).join('') : '<li>None</li>';
}

/* ---------- Notes (localStorage) ---------- */
function loadNotes() {
  const raw = localStorage.getItem(NOTES_KEY);
  const arr = raw ? JSON.parse(raw) : [];
  return arr;
}
function saveNote(noteObj) {
  const arr = loadNotes();
  arr.unshift(noteObj);
  localStorage.setItem(NOTES_KEY, JSON.stringify(arr));
  renderNotes();
}
function renderNotes() {
  const notes = loadNotes();
  const container = $('#notes-list');
  if (!notes.length) {
    container.innerHTML = `<p>No notes yet. Yours are stored locally in this browser.</p>`;
    return;
  }
  container.innerHTML = notes.map(n => `
    <div class="note">
      <div class="note-meta"><strong>${escapeHtml(n.name)}</strong> ${n.univ?`â€” ${escapeHtml(n.univ)}`:''} <span class="date">(${new Date(n.ts).toLocaleString()})</span></div>
      <div class="note-body">${escapeHtml(n.text)}</div>
    </div>
  `).join('');
}

/* ---------- Event bindings ---------- */
function bindEvents() {
  [searchInput, countryFilter, rankMin, rankMax].forEach(el => {
    el.addEventListener('input', () => {
      applySortAndRender();
    });
  });

  sortSelect.addEventListener('change', () => applySortAndRender());
  resetBtn.addEventListener('click', () => {
    searchInput.value=''; countryFilter.value=''; rankMin.value=''; rankMax.value=''; sortSelect.value='rank-asc';
    applySortAndRender();
  });

  // note form
  $('#note-form').addEventListener('submit', (e) => {
    e.preventDefault();
    const note = {
      name: $('#note-name').value || 'anon',
      univ: $('#note-univ').value || '',
      text: $('#note-text').value || '',
      ts: Date.now()
    };
    saveNote(note);
    $('#note-form').reset();
    alert('Saved locally. Notes are stored only in your browser (no server).');
  });

  // set year in footer
  $('#year').textContent = new Date().getFullYear();
}

/* ---------- Initialise ---------- */
function init() {
  bindEvents();
  renderNotes();
  loadData();
}

document.addEventListener('DOMContentLoaded', init);
