            )
          )}
          {...rest}
        />
      </div>
      {label && (
        <label htmlFor={checkboxId} className="ml-3 text-sm text-slate">
          {label}
        </label>
      )}
      {error && <p className="text-sm text-coral mt-1">{error}</p>}
    </div>
  )
}

